{% schema %}
{
  "name": "Featured Collections",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Featured collections"
    }
  ],
  "presets" : [{
    "name" : "Featured Collections"
  }],
   "blocks": [
  {
    "name": "Collection",
    "type": "featured_collection"
  }
]
}
{% endschema %}

<div class="custom-blocks-section">
  <h2>{{ section.settings.section_title }}</h2>
  {% for block in section.settings.blocks %}
    <div class="block">
      <h3>{{ block.block_title }}</h3>
      <p>{{ block.block_text }}</p>
      <a href="/collections/{{ block.block_collection }}" class="btn">View Collection</a>
    </div>
  {% endfor %}
</div>